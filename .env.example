# AI Service Configuration
AI_PRIMARY_PROVIDER=openai
AI_FALLBACK_PROVIDERS=grok,claude,mock
AI_ENABLE_FALLBACK=true
AI_MAX_RETRIES=2
AI_RETRY_DELAY=1000

NODE_ENV=development
API_BASE_URL=http://localhost:3001